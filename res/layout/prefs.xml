<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical"
	    android:orientation="vertical"
	  >
	  
	    <TextView
	        android:id="@+id/PrefsAgeTextView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/PrefsGenderLayout1"
	        android:layout_marginTop="10dp"
	        android:text="Select Age (years):"
	        android:textSize="20sp" />
	    
	    <LinearLayout 
	        android:id="@+id/PrefsGenderLayout1"
	        android:orientation="vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/PrefsGenderTextView1"
	        android:layout_alignLeft="@+id/PrefsGenderTextView1"
	        android:layout_marginLeft="20dp"
	        android:clickable="true">
		    <CheckBox
		        android:id="@+id/PrefsGenderCheckBox1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pref_gender1" />
		
		    <CheckBox
		        android:id="@+id/PrefsGenderCheckBox2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pref_gender2" />
	        
	    </LinearLayout>
	    <TextView
	        android:id="@+id/PrefsGenderTextView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:text="Select Gender:"
	        android:textColor="#fff"
	        android:textSize="20sp" />
	
	
	    <LinearLayout
	        android:id="@+id/PrefsAgeLayout1"
	        android:orientation="vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/PrefsAgeTextView1"
	        android:layout_alignLeft="@+id/PrefsAgeTextView1"
	        android:layout_marginLeft="20dp"
	        android:clickable="true">
	        
		    <CheckBox
		        android:id="@+id/PrefsAgeCheckBox1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pref_age1" />
		
		    <CheckBox
		        android:id="@+id/PrefsAgeCheckBox2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pref_age2" />
		        
		    <CheckBox
		        android:id="@+id/PrefsAgeCheckBox3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pref_age3" />
		
		    <CheckBox
		        android:id="@+id/PrefsAgeCheckBox4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pref_age4" />
		
		    <CheckBox
		        android:id="@+id/PrefsAgeCheckBox5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pref_age5" />
		
		    <CheckBox
		        android:id="@+id/PrefsAgeCheckBox6"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pref_age6" />
		
		    <CheckBox
		        android:id="@+id/PrefsAgeCheckBox7"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pref_age7" />
		
		     <CheckBox
		        android:id="@+id/PrefsAgeCheckBox8"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pref_age8" />
		         
	    </LinearLayout>
	
	    
	    <Button
	        android:id="@+id/PrefsSelectButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/PrefsButton1"
	        android:text="Select All / Deselect All" />
	    
	    <Button
	        android:id="@+id/PrefsButton1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:text="Done" />
	
	</LinearLayout>
</ScrollView>